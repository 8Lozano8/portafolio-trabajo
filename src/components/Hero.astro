---
import FotoPerfil from '../../images/foto_perfil.jpg'
import LogosTecnologias from '../../images/hero-inferior.svg'
import "../styles/Body.css";

---

<section class="hero align-items-stretch">
    <div
        class="hero-principal d-flex flex-column justify-content center align-items-center"
    >
        <img
            class="hero-imagen-desarrollador rounded-circle"
            src={FotoPerfil.src}
            alt="Foto de Jean Lozano"
        />
        <h1>Hola, soy Jean Lozano</h1>
        <h2>Desarrollo sitios web y amante de los videojuegos</h2>
    </div>

    <div class="hero-inferior">
        <img
            class="hero-inferior-imagen img-fluid"
            src={LogosTecnologias.src}
            alt="Monitor, laptop y logos de HTML, CSS, JavaScript y React."
        />
    </div>
</section>